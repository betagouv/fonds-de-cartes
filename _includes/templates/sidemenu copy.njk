{% set docsLinks = collections.docsNavigation | filterCollectionLang | eleventyNavigation %}
<nav>
  <ul>
    {% for link in docsLinks %}
        {% set linkUrl = link.url | locale_url(lang) %}
        <li>
            <a href="{{ linkUrl }}"{% if linkUrl == page.url %} aria-current="page"{% endif %}>
            {{ link.title }}
          </a>
        </li>
    {% endfor %}
  </ul>
</nav>