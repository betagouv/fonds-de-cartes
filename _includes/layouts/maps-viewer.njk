---
layout: layouts/base.njk
showMaps: true
---
<!-- Bloc containing the map -->
<div id="map">
    <aside id="map-selection" 
           class="map-panel" 
           aria-labelledby="panel-title">
        <button id="open-panel-btn" 
                class="fr-btn fr-btn--icon-left fr-icon-eye-line map-panel-toggle" 
                aria-label="Ouvrir le panneau de sélection des cartes"
                aria-controls="control-panel"
                aria-expanded="true">
            Afficher les cartes
        </button>
        <div class="map-panel--extended">
            <div class="map-panel__header">
                <button class="fr-btn--close fr-btn" 
                        aria-label="Fermer le panneau de sélection des cartes"
                        aria-controls="control-panel">
                    Fermer
                </button>
            </div>
            <div class="map-panel__content">
                <h2 id="panel-title" class="fr-h5">Cartes</h2>
                <div class="map-card">
                    <div class="map-card__header">
                        <div class="map-card__img">   
                            <img src="/img/image.jpg" class="fr-responsive-img" alt="" />
                        </div>
                        <ul class="fr-badges-group">
                            <li>
                                <p class="fr-badge fr-badge--sm fr-badge--success">Affiché actuellement</p>
                            </li>
                        </ul>
                    </div>
                    <div class="map-card__content">
                        <h3 class="map-card__title">Carte standard</h3>
                        <p class="map-card__desc">Une carte couleur de contextualisation géographique, adaptée à la plupart des usages.</h3>
                    </div>
            </div>
            <div class="map-card">
                    <div class="map-card__header">
                        <div class="map-card__img">   
                            <img src="/img/image.jpg" class="fr-responsive-img" alt="" />
                        </div>
                        <ul class="fr-badges-group">
                            <li>
                                <p class="fr-badge fr-badge--sm fr-badge--green-emeraude">label badge</p>
                            </li>
                        </ul>
                    </div>
                    <div class="map-card__content">
                        <h3 class="map-card__title">Carte standard</h3>
                        <p class="map-card__desc">Une carte couleur de contextualisation géographique, adaptée à la plupart des usages.</h3>
                    </div>
                </div>
            </div>
        </div>
    </aside>
